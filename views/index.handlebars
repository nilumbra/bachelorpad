<!doctype html>

<html>
<head>
	<title>BachelorPad Index</title>


    <style type="text/css">
        html { height: 100% }
        body { height: 100%; margin: 0; padding: 0 }

    </style>
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfR2H6fIJ2qwTj9c_EyD_ENmEHhR5EFAo">

    </script>
    <script type="text/javascript">

        var rangeShowing = false;;
        var map;
        var citymap = {};

        citymap['sandiego1'] = {
            center: new google.maps.LatLng(32.7153300, -117.1572600),
            population: 5000
        };
        citymap['sandiego2'] = {
            center: new google.maps.LatLng(32.7153300, -117.1572600),
            population: 4000
        };
        citymap['sandiego3'] = {
            center: new google.maps.LatLng(32.7153300, -117.1572600),
            population: 3000
        };


        var cityCircle;




        function initialize() {
            var myLatlng = new google.maps.LatLng(-25.363882,131.044922);
            var mapOptions = {
                zoom: 11,
                center: new google.maps.LatLng(32.7153300, -117.1572600)
            };

            map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

            var contentString = '<div id="content">'+
                    '<div id="siteNotice">'+
                    '</div>'+
                    '<h1 id="firstHeading" class="firstHeading">Uluru</h1>'+
                    '<div id="bodyContent">'+
                    '<p><b>Uluru</b>, also referred to as <b>Ayers Rock</b>, is a large ' +
                    '<p>Attribution: Uluru, <a href="https://en.wikipedia.org/w/index.php?title=Uluru&oldid=297882194">'+
                    'https://en.wikipedia.org/w/index.php?title=Uluru</a> '+
                    '(last visited June 22, 2009).</p>'+
                    '</div>'+
                    '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Uluru (Ayers Rock)'
            });
            google.maps.event.addListener(marker, 'click', function() {
                infowindow.open(map,marker);
            });





            var centerControlDiv = document.createElement('div');
            var centerControl = new CenterControl(centerControlDiv, map);

            centerControlDiv.index = 1;
            map.controls[google.maps.ControlPosition.BOTTOM_CENTER].push(centerControlDiv);


        }

        google.maps.event.addDomListener(window, 'load', initialize);



        function CenterControl(controlDiv, map) {

            // Set CSS for the control border
            var controlUI = document.createElement('div');
            controlUI.style.backgroundColor = '#fff';
            controlUI.style.border = '2px solid #fff';
            controlUI.style.borderRadius = '3px';
            controlUI.style.boxShadow = '0 2px 6px rgba(0,0,0,.3)';
            controlUI.style.cursor = 'pointer';
            controlUI.style.marginBottom = '22px';
            controlUI.style.textAlign = 'center';
            controlUI.title = 'Click to show range';
            controlDiv.appendChild(controlUI);

            // Set CSS for the control interior
            var controlText = document.createElement('div');
            controlText.style.color = 'rgb(25,25,25)';
            controlText.style.fontFamily = 'Roboto,Arial,sans-serif';
            controlText.style.fontSize = '16px';
            controlText.style.lineHeight = '38px';
            controlText.style.paddingLeft = '5px';
            controlText.style.paddingRight = '5px';
            controlText.innerHTML = 'Show Range';
            controlUI.appendChild(controlText);

            //Hide range circles
            google.maps.event.addDomListener(controlUI, 'click', function() {

                console.log("RangeShowing: "+rangeShowing);
                if(!rangeShowing)
                    showRangeCircles();
                else if(rangeShowing)
                    hideRangeCircles();

            });

        }

        function hideRangeCircles(){
            rangeShowing = false;

            // Construct the circle for each value in citymap.
            // Note: We scale the area of the circle based on the population.
            for (var city in citymap) {

                if (city == "sandiego1") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.09,
                        map: map,
                        center: citymap[city].center,
                        radius: 0
                    };

                }
                else if (city == "sandiego2") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.06,
                        map: map,
                        center: citymap[city].center,
                        radius: 0
                    };

                }
                else if (city == "sandiego3") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.09,
                        map: map,
                        center: citymap[city].center,
                        radius: 0
                    };

                }

                // Add the circle for this city to the map.
                cityCircle = new google.maps.Circle(populationOptions);
            }

        }

        function showRangeCircles(){
            rangeShowing = true;

            // Construct the circle for each value in citymap.
            // Note: We scale the area of the circle based on the population.
            for (var city in citymap) {

                if (city == "sandiego1") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.09,
                        map: map,
                        center: citymap[city].center,
                        radius: Math.sqrt(citymap[city].population) * 100
                    };

                }
                else if (city == "sandiego2") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.06,
                        map: map,
                        center: citymap[city].center,
                        radius: Math.sqrt(citymap[city].population) * 100
                    };

                }
                else if (city == "sandiego3") {

                    var populationOptions = {
                        strokeColor: '#03A9F4',
                        strokeOpacity: 0.18,
                        strokeWeight: 2,
                        fillColor: '#03A9F4',
                        fillOpacity: 0.09,
                        map: map,
                        center: citymap[city].center,
                        radius: Math.sqrt(citymap[city].population) * 100
                    };

                }

                // Add the circle for this city to the map.
                cityCircle = new google.maps.Circle(populationOptions);
            }

        }

    </script>
</head>
<body>
<div id="map-canvas" style="width: 100%; height: 70%"></div>
</body>
</html>