                        nightSound.fade(nightSound.volume, 0.05 * results.length, 500);
                        if (status == google.maps.places.PlacesServiceStatus.OK) {

                            for(var i = 0; i < markers.length; i++) {
                                markers[i].setMap(null);
                            }
                            markers = [];
                            for (var i = 0; i < results.length; i++) {
                                var mark = results[i];
                                var place = new google.maps.LatLng(mark.geometry.location.A,mark.geometry.location.F);
                                var marked = new google.maps.Marker({
                                    position: place,
                                    icon: barIcon
                                });
                                marked.setMap(map);
                                markers.push(marked);
                            }
                        }
                    });
                }

            });

            var markers = [];


            google.maps.event.addListener(map, 'dragend', function() {

                eFunction = Math.pow(Math.E, (22-(map.getZoom())))+2;


                if(map.getMapTypeId() == "roadmap") { //daytime

                    dayRequest = {
                        location: map.getCenter(),
                        radius: (eFunction),
                        types: ['grocery_or_supermarket']
